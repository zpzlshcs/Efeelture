<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="afterDescendants"
    android:focusable="false"
    android:focusableInTouchMode="true" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/cri_v"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:background="@color/black"
            android:layout_alignBottom="@+id/cri_rl"/>
        <RelativeLayout
            android:id="@+id/cri_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/cri_item_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:descendantFocusability="afterDescendants"
                android:focusable="false"
                android:focusableInTouchMode="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/ic_cri_timebase" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black" />

                </LinearLayout>
            </RelativeLayout>



            <ImageView
                android:id="@+id/cri_item_imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/linearLayout1"
                android:layout_toRightOf="@+id/linearLayout1"
                android:src="@drawable/image_head" />

            <TextView
                android:id="@+id/cri_item_textView_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayout1"
                android:layout_toRightOf="@+id/cri_item_imageView1"
                android:hint="显示内容"
                android:text="显示内容"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/cri_item_likeButton1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/cri_item_reply"
                    android:src="@drawable/ic_blackheart" />

                <Button
                    android:id="@+id/cri_item_reply"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:background="#127C56"
                    android:focusable="true"
                    android:text="回复"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/likepeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cri_item_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="12"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/cri_item_textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="人觉得很赞"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#3D59AB" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/cri_item_linearLayout"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cri_item_textview_name"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="aaaaaaaaaaaaa"
                    android:ellipsize="end"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cri_item_textview_time"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="刚asadasdasdasd刚"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/replyroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="5dp"
                android:background="@color/bgcolor_gray"
                android:orientation="vertical" >

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>