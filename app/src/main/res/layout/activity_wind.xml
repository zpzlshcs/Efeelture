<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.wangsheng.statusbardemo.ScrollingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <TextView
                        android:id="@+id/textView1_zlms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:paddingLeft="30dp"
                        android:text="制冷模式"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView_zloff1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:src="@drawable/ic_airoff" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="#EBEBEB" >
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <TextView
                        android:id="@+id/textView1_zrms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:paddingLeft="30dp"
                        android:text="制热模式"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView_zroff1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:src="@drawable/ic_airoff" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bgcolor_gray" >
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp" >

                    <com.example.windows8.newef.custom.PickerView
                        android:id="@+id/minute_pv"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/bgcolor_gray" >
                </View>

                <LinearLayout
                    android:id="@+id/clickthislanearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" >

                    <TextView
                        android:id="@+id/textView1_cfsz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:paddingLeft="30dp"
                        android:text="出风设置"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView_xiala"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:src="@drawable/ic_airpull" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB" >
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >

                        <TextView
                            android:id="@+id/extView1_sdfx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:paddingLeft="30dp"
                            android:text="手动风向"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView_off1"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:src="@drawable/ic_airoff" />
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB" >
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        >

                        <ImageView
                            android:id="@+id/imageView_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_windup" />

                        <ImageView
                            android:id="@+id/imageView_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_winddown1" />

                        <ImageView
                            android:id="@+id/imageView_3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_windleft1" />

                        <ImageView
                            android:id="@+id/imageView_4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_windright1" />

                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB" >
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >

                        <TextView
                            android:id="@+id/textView1_zdfx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:paddingLeft="30dp"
                            android:text="自动风向"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView_off2"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:src="@drawable/ic_airoff" />
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB" >
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >

                        <TextView
                            android:id="@+id/textView1_sdfs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:paddingLeft="30dp"
                            android:text="手动风速"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView_off3"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:src="@drawable/ic_airoff" />

                        <ImageView
                            android:id="@+id/imageView_level"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:clickable="true"
                            android:src="@drawable/ic_windlevel1" />

                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="#EBEBEB" >
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        >

                        <TextView
                            android:id="@+id/textView1_zdfs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:paddingLeft="30dp"
                            android:text="自动风速"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView_off4"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:clickable="true"
                            android:src="@drawable/ic_airoff" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="#EBEBEB" >
                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <TextView
                        android:id="@+id/textView_csms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:paddingLeft="30dp"
                        android:text="抽湿模式"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageView_csoff2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:clickable="true"
                        android:src="@drawable/ic_airoff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@android:color/transparent">

            <!--封面图片-->
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_wind_head"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageView
                    android:id="@+id/imageView_bg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_back" />

            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/toolbar_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.5dp"
                    android:text="空调控制"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/airnew_textView_dangqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:clickable="true"
                    android:gravity="top"
                    android:text="当前模式"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/textView_xuanxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制冷"
                    android:textColor="@color/white"
                    android:textSize="33sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp" />
            </RelativeLayout>

            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tab_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="45dp"-->
            <!--app:tabTextColor="@color/dark_gray"-->
            <!--app:tabSelectedTextColor="@color/brown_primary"-->
            <!--app:tabIndicatorColor="@color/brown_primary"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:background="@color/white" />-->
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
