<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_app" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <EditText
                    android:id="@+id/edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:imeOptions="actionGo"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="手机号:"
                    android:textColor="#DAA520"
                    android:textSize="15sp" />

            </FrameLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#66CDAA">

            </View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="30dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="密码："
                    android:textColor="#DAA520"
                    android:textSize="15sp" />


            </FrameLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="fill_parent"
                android:layout_height="3px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#66CDAA">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/image_code"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_sport" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edittext_code"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:ems="10"
                        android:hint="  请输入验证码"
                        android:textColorHint="@color/blue"
                        android:imeOptions="actionGo"
                        android:textSize="15dp">


                    </EditText>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3px"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="#66CDAA"
                        android:gravity="center_vertical">

                    </View>


                </FrameLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textview_changecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:text="看不清？请点击验证码图片刷新"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/button_forget"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:text="忘记密码?"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/button_login"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_loginbutton"
                android:text="登  录"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_register"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_loginbutton"
                android:text="注  册"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_anonymous"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:text="匿名登录"
                android:textColor="@color/blue" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>